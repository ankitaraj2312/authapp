<%- include('partials/header', { title: 'Login' }) %>

<div class="d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-lg p-5" style="width: 400px; border-radius: 15px;">
    <h3 class="text-center mb-4 text-success fw-bold">Login</h3>

    <% if (message) { %>
      <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <form method="POST" action="/login">
      <div class="mb-3">
        <label class="form-label">Email or Phone Number</label>
        <input type="text" name="identifier" class="form-control form-control-lg" placeholder="Email or Phone" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" name="password" class="form-control form-control-lg" placeholder="Enter Password" required>
      </div>
      <button class="btn btn-gradient w-100 fw-bold">Login</button>
      <p class="mt-3 text-center">No account? <a href="/register" class="text-success fw-bold">Register</a></p>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
